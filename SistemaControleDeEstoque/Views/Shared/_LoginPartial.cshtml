@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="flex items-center space-x-4">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="flex items-center space-x-3">
            <!-- Perfil do usuário -->
            <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Gerenciar perfil"
               class="flex items-center text-sm font-medium text-gray-700 hover:text-slate-800 transition-colors duration-150">
                <span class="hidden sm:inline-flex items-center justify-center h-8 w-8 rounded-full bg-slate-100 text-slate-800 mr-2">
                    <span class="text-sm font-medium leading-none">@User.Identity?.Name?.Substring(0, 1).ToUpper()</span>
                </span>
                <span>Olá, @(User.Identity?.Name?.Contains('@') == true ? User.Identity?.Name?.Split('@')[0] : User.Identity?.Name)!</span>
            </a>

            <!-- Botão de Logout -->
            <form class="inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit"
                        class="inline-flex items-center px-3 py-1.5 border border-transparent rounded-md text-sm font-medium text-gray-700 hover:text-white hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-700 transition-colors duration-150">
                    <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                    </svg>
                    Sair
                </button>
            </form>
        </div>
    }
    else
    {
        <div class="flex items-center space-x-2">
            <!-- Botão de Registro -->
            <a asp-area="Identity" asp-page="/Account/Register"
               class="inline-flex items-center px-3 py-1.5 border border-slate-300 rounded-md shadow-sm text-sm font-medium text-slate-800 bg-white hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500">
                <svg class="h-4 w-4 mr-1.5 text-slate-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                </svg>
                Registrar
            </a>

            <!-- Botão de Login -->
            <a asp-area="Identity" asp-page="/Account/Login"
               class="inline-flex items-center px-3 py-1.5 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-slate-700 hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-600">
                <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                </svg>
                Entrar
            </a>
        </div>
    }
</div>