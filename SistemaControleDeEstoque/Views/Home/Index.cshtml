@{
    ViewData["Title"] = "Home Page";

    // Formatação dos valores
    var valorEstoqueFormatado = string.Format("{0:C}", ViewBag.ValorTotalEstoque);

    // Determinar cores para variações
    var classeVariacaoProdutos = ViewBag.VariacaoTotalProdutos >= 0 ? "text-slate-800" : "text-red-600";
    var classeVariacaoValor = ViewBag.VariacaoValorEstoque >= 0 ? "text-slate-800" : "text-red-600";
    var simboloVariacaoProdutos = ViewBag.VariacaoTotalProdutos >= 0 ? "+" : "";
    var simboloVariacaoValor = ViewBag.VariacaoValorEstoque >= 0 ? "+" : "";
}

<div class="bg-gradient-to-r from-slate-700 to-slate-900 py-12 px-4 sm:px-6 lg:px-8 rounded-lg shadow-lg">
    <div class="text-center">
        <h1 class="text-4xl font-extrabold text-slate-50 tracking-tight sm:text-5xl">
            Sistema de Controle de Estoque
        </h1>
        <p class="mt-4 text-xl text-slate-200">
            Gerencie seu inventário com facilidade e precisão
        </p>
    </div>
</div>

<div class="mt-10">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Card 1 -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-slate-800 rounded-md p-3">
                        <!-- Ícone de caixa/produto -->
                        <svg class="h-6 w-6 text-slate-100" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m-8-4l8 4m8 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <h2 class="text-lg font-medium text-gray-900">Produtos</h2>
                        <p class="mt-1 text-sm text-gray-500">Gerencie seu catálogo de produtos</p>
                    </div>
                </div>
                <div class="mt-4">
                    <a asp-controller="Produtos" asp-action="Index" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-slate-800 hover:bg-slate-900">
                        Ver produtos
                    </a>
                </div>
            </div>
        </div>

        <!-- Card 2 -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-slate-700 rounded-md p-3">
                        <!-- Ícone de estatísticas -->
                        <svg class="h-6 w-6 text-slate-100" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <h2 class="text-lg font-medium text-gray-900">Relatórios</h2>
                        <p class="mt-1 text-sm text-gray-500">Análise e relatórios de estoque</p>
                    </div>
                </div>
                <div class="mt-4">
                    <a asp-controller="Relatorios" asp-action="Index" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-slate-700 hover:bg-slate-800">
                        Ver relatórios
                    </a>
                </div>
            </div>
        </div>

        <!-- Card 3 -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-slate-600 rounded-md p-3">
                        <!-- Ícone de alerta -->
                        <svg class="h-6 w-6 text-slate-100" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <h2 class="text-lg font-medium text-gray-900">Alertas</h2>
                        <p class="mt-1 text-sm text-gray-500">Notificações de estoque baixo</p>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="#" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-slate-600 hover:bg-slate-700">
                        Ver alertas
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-10 bg-slate-50 rounded-lg p-6 shadow-sm">
        <h2 class="text-2xl font-bold text-slate-900 mb-4">Visão Geral do Estoque</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="bg-white p-4 rounded-lg shadow">
                <p class="text-sm font-medium text-slate-700">Total de Produtos</p>
                <p class="text-3xl font-bold text-slate-900">@ViewBag.TotalProdutos</p>
                <div class="mt-1">
                    <span class="@classeVariacaoProdutos text-sm font-semibold">@simboloVariacaoProdutos@ViewBag.VariacaoTotalProdutos%</span>
                    <span class="text-gray-500 text-sm"> em relação ao mês passado</span>
                </div>
            </div>
            <div class="bg-white p-4 rounded-lg shadow">
                <p class="text-sm font-medium text-slate-700">Valor do Estoque</p>
                <p class="text-3xl font-bold text-slate-900">@valorEstoqueFormatado</p>
                <div class="mt-1">
                    <span class="@classeVariacaoValor text-sm font-semibold">@simboloVariacaoValor@ViewBag.VariacaoValorEstoque%</span>
                    <span class="text-gray-500 text-sm"> em relação ao mês passado</span>
                </div>
            </div>
            <div class="bg-white p-4 rounded-lg shadow">
                <p class="text-sm font-medium text-slate-700">Itens com Estoque Baixo</p>
                <p class="text-3xl font-bold text-red-600">@ViewBag.ProdutosEstoqueBaixo</p>
                <div class="mt-1">
                    @if (ViewBag.ProdutosEstoqueBaixo > 0)
                    {
                        <span class="text-red-600 text-sm font-semibold">Atenção!</span>
                        <span class="text-gray-500 text-sm"> Precisam de reposição</span>
                    }
                    else
                    {
                        <span class="text-slate-700 text-sm font-semibold">Tudo em ordem!</span>
                        <span class="text-gray-500 text-sm"> Estoque adequado</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>