@page
@model SistemaControleDeEstoque.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Perfil";
}

<div class="max-w-6xl mx-auto px-4 py-8">
    <div class="bg-gradient-to-r from-slate-700 to-slate-900 px-6 py-4 rounded-t-lg">
        <h1 class="text-3xl font-bold text-slate-100">@ViewData["Title"]</h1>
    </div>

    <div class="bg-white shadow-lg rounded-b-lg p-8">
        <div class="mx-auto" style="width: 500px;">
            <form id="profile-form" method="post" class="space-y-6">
                <div class="mb-6">
                    <h2 class="text-2xl font-semibold text-gray-800">Informações da Conta</h2>
                    <div class="mt-1 h-1 w-24 bg-slate-600 rounded"></div>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-sm text-red-600 p-2 bg-red-50 border border-red-200 rounded" role="alert"></div>

                <div class="relative">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Nome de usuário</label>
                    <input disabled value="@Model.Username"
                           class="bg-gray-50 w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm text-gray-500" />
                </div>

                <div class="relative">
                    <label asp-for="Input.NumTelefone" class="block text-sm font-medium text-gray-700 mb-1">Telefone</label>
                    <input asp-for="Input.NumTelefone"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-slate-500 focus:border-slate-500" />
                    <span asp-validation-for="Input.NumTelefone" class="mt-1 text-sm text-red-600"></span>
                </div>

                <button type="submit"
                        class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-slate-700 hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500 transition-colors duration-200">
                    Salvar
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}